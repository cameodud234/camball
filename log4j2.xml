<Configuration>
  <Appenders>
    <Routing name="RoutingAppender">
      <Routes pattern="$${ctx:type}">
        <Route>
          <RollingFile name="DebugFile" fileName="logs/debug.log"
              filePattern="logs/debug-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
              <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
              <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
              <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
          </RollingFile>
        </Route>
        <Route>
          <RollingFile name="InfoFile" fileName="logs/info.log"
              filePattern="logs/info-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
              <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
              <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
              <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
          </RollingFile>
        </Route>
        <Route>
          <RollingFile name="WarnFile" fileName="logs/warn.log"
              filePattern="logs/warn-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
              <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
              <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
              <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
          </RollingFile>
        </Route>
      </Routes>
    </Routing>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="RoutingAppender" />
    </Root>
  </Loggers>
</Configuration>